<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/red" >



    <ImageView
        android:id="@+id/MainMenuImageBackground"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/menubackground4"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/MainMenuImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/menu_background"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignBottom="@+id/MainMenuImage"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="35dp">

        <Button
            android:layout_width="175dp"
            android:layout_height="65dp"
            android:onClick="showPlayScreen"
            android:text="@string/play"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#CEE7ED"
            android:background="@drawable/buttonbackgound1"/>

        <Button
            android:layout_width="175dp"
            android:layout_height="65dp"
            android:onClick="showHelpScreen"
            android:text="@string/help"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#CEE7ED"
            android:background="@drawable/buttonbackgound1"/>

        <Button
            android:layout_width="175dp"
            android:layout_height="65dp"
            android:onClick="showSettingScreen"
            android:text="@string/settingsLabel"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#CEE7ED"
            android:background="@drawable/buttonbackgound1"/>
        <Button
            android:layout_width="175dp"
            android:layout_height="65dp"
            android:text="@string/ExitLabel"
            android:onClick="Exit"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#CEE7ED"
            android:background="@drawable/buttonbackgound1"/>
    </LinearLayout>

</RelativeLayout>
